section#generalModule.module.container.px-5
	.container-fluid.px-5
		.jumbotron.text-center.bg-transparent
			h1.display-4 General
			hr.container.size-50p
			p.lead Here comes the general things
		.row.my-5
			.col-6
				form(action=guild.id + "/general" method='POST').form-group
					.input-group.mb-2
						label.input-group-text Send message
						input.form-control(type='text' name="message")
					select.form-select(name="channel")
						each channel of Array.from(guild.channels.cache.filter(c=>c.type==='text').sort((a,b)=>(a.name > b.name) ? 1 : ((b.name > a.name) ? -1 : 0)).values())
							option(value=channel.id) ##{channel.name}
					.d-flex.justify-content-center
						button.btn.btn-primary #[i.fas.fa-rocket] Send
			.col-4
				form(action=guild.id + "/general?_method=PUT" method='POST').form-group
					.input-group
						label.input-group-text Prefix
						input.form-control(type='text' name='prefix' placeholder=`Default prefix \'m/\'`, value=prefix, required, maxlength="5")
					.d-flex.justify-content-center
						button.btn.btn-success #[i.fas.fa-rocket] Save
			.col-4
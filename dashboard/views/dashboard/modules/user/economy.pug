						p#mHours.mb-0 Hours: !{monthlyCooldownValues.hours}
						p#mMins.mb-0 Minutes: !{monthlyCooldownValues.minutes}
						p#mSecs.mb-0 seconds: !{monthlyCooldownValues.seconds}

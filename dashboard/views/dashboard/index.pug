											input.bg#bg1.radio-check.form-check-input(type="radio" name='bgImage' value='./dashboard/assets/img/rankCardBackgrounds/1.jpg' checked)
											img(width='300' height='100' src='img/rankCardBackgrounds/1.jpg')
